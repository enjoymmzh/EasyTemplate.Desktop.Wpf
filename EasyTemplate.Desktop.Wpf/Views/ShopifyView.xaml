<UserControl
    x:Class="EasyTemplate.Desktop.Wpf.Views.ShopifyView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:data="[data ]clr-namespace:EasyTemplate.Desktop.Wpf.ViewModels"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:materialDesignMahApps="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
    x:Name="shopifyCraw"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="73" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <materialDesignMahApps:ColorZone
            Grid.Row="0"
            Padding="16"
            Background="#3393df"
            Mode="PrimaryMid">
            <DockPanel>
                <materialDesignMahApps:ColorZone
                    Margin="16,0,0,0"
                    Padding="8,4,8,4"
                    Panel.ZIndex="1"
                    materialDesignMahApps:ElevationAssist.Elevation="Dp2"
                    CornerRadius="2"
                    Mode="Standard">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <TextBox
                            x:Name="txtUrl"
                            Grid.Column="1"
                            MinWidth="200"
                            Margin="8,0,0,0"
                            VerticalAlignment="Center"
                            materialDesignMahApps:HintAssist.Hint="請輸入鏈接"
                            materialDesignMahApps:TextFieldAssist.DecorationVisibility="Hidden"
                            BorderThickness="0"
                            KeyDown="txtUrl_KeyDown"
                            Text="{Binding Url}" />
                        <Button
                            x:Name="btnLink"
                            Grid.Column="2"
                            Command="{Binding JumpCommand}"
                            CommandParameter="{Binding ElementName=browser}"
                            Style="{StaticResource MaterialDesignToolButton}">
                            <materialDesignMahApps:PackIcon Margin="0,0,0,0" Kind="Send" />
                        </Button>
                    </Grid>
                </materialDesignMahApps:ColorZone>
            </DockPanel>
        </materialDesignMahApps:ColorZone>

        <mah:MetroAnimatedSingleRowTabControl x:Name="tab" Grid.Row="2">
            <TabItem Header="{Binding Addr}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="55" />
                        <RowDefinition Height="2" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <ToolBarTray Grid.Row="0">
                        <ToolBar ClipToBounds="False" Style="{StaticResource MaterialDesignToolBar}">
                            <Button
                                x:Name="btnDownload"
                                Command="{Binding DownloadCommand}"
                                Content="{materialDesignMahApps:PackIcon Kind=PlusThick}"
                                Foreground="#7cb342"
                                ToolTip="识别当前页面" />
                            <Separator />
                            <Button
                                x:Name="btnBack"
                                Command="{Binding BackCommand}"
                                Content="{materialDesignMahApps:PackIcon Kind=ArrowLeft}"
                                ToolTip="返回" />
                            <Button
                                x:Name="btnForward"
                                Command="{Binding ForwardCommand}"
                                Content="{materialDesignMahApps:PackIcon Kind=ArrowRight}"
                                ToolTip="前进" />
                            <Button
                                x:Name="btnRefresh"
                                Command="{Binding RefreshPageCommand}"
                                Content="{materialDesignMahApps:PackIcon Kind=Refresh}"
                                ToolTip="刷新" />
                            <Button
                                x:Name="btnHome"
                                Command="{Binding HomePageCommand}"
                                Content="{materialDesignMahApps:PackIcon Kind=Home}"
                                ToolTip="主页" />
                            <Separator />
                            <Button
                                x:Name="btnConsole"
                                Command="{Binding ConsoleToolCommand}"
                                Content="{materialDesignMahApps:PackIcon Kind=Console}"
                                ToolTip="控制台" />
                            <Separator />
                            <TextBlock
                                Margin="20,0,0,0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Text="{Binding AddInfo}" />
                        </ToolBar>
                    </ToolBarTray>
                    <ProgressBar
                        Grid.Row="1"
                        Height="3"
                        DockPanel.Dock="Top"
                        Foreground="#574EB9"
                        IsIndeterminate="True"
                        Visibility="{Binding PageLoading}" />
                    <wv2:WebView2
                        x:Name="browser"
                        Grid.Row="2"
                        CoreWebView2InitializationCompleted="browser_CoreWebView2InitializationCompleted"
                        NavigationCompleted="browser_NavigationCompleted"
                        NavigationStarting="browser_NavigationStarting"
                        Source="{Binding Url}"
                        SourceChanged="browser_SourceChanged" />
                </Grid>
            </TabItem>
            <TabItem Header="產品清單">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="55" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <ToolBarTray Grid.Row="0">
                        <ToolBar ClipToBounds="False" Style="{StaticResource MaterialDesignToolBar}">
                            <Button
                                x:Name="uploadbtn"
                                Command="{Binding UploadCommand}"
                                CommandParameter="{Binding ElementName=combo1}"
                                Content="{materialDesignMahApps:PackIcon Kind=Upload}"
                                Foreground="#7cb342"
                                ToolTip="上傳數據到總後台"
                                Visibility="{Binding Visibility, ElementName=upload1, Converter={StaticResource InverseVisibilityConverter}}" />
                            <ProgressBar
                                x:Name="upload1"
                                Margin="17"
                                Foreground="#7cb342"
                                IsIndeterminate="True"
                                Style="{StaticResource MaterialDesignCircularProgressBar}"
                                Visibility="{Binding Uploading}"
                                Value="0" />
                            <Button
                                x:Name="cancel"
                                Command="{Binding CancelCommand}"
                                Content="{materialDesignMahApps:PackIcon Kind=CloseCircle}"
                                Foreground="#D50000"
                                ToolTip="取消上傳"
                                Visibility="{Binding Uploading}" />
                            <Separator />
                            <Button
                                x:Name="save"
                                Command="{Binding SaveCommand}"
                                Content="{materialDesignMahApps:PackIcon Kind=ContentSave}"
                                IsEnabled="{Binding ComboEnable}"
                                ToolTip="保存當前數據" />
                            <Button
                                x:Name="load"
                                Command="{Binding LoadCommand}"
                                CommandParameter="{Binding ElementName=datagrid1}"
                                Content="{materialDesignMahApps:PackIcon Kind=FolderOpen}"
                                IsEnabled="{Binding ComboEnable}"
                                ToolTip="加載數據" />
                            <Button
                                Command="{Binding DeleteCommand}"
                                Content="{materialDesignMahApps:PackIcon Kind=Delete}"
                                IsEnabled="{Binding ComboEnable}"
                                ToolTip="刪除選中數據" />
                            <Button
                                x:Name="reset"
                                Command="{Binding ResetCommand}"
                                Content="{materialDesignMahApps:PackIcon Kind=RestoreAlert}"
                                IsEnabled="{Binding ComboEnable}"
                                ToolTip="將失敗重置為未上傳" />
                            <Separator />
                            <TextBlock
                                Margin="20,0,0,0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Text="上傳狀態：" />
                            <ComboBox
                                x:Name="combo1"
                                materialDesign:HintAssist.Hint="上傳狀態"
                                IsEnabled="{Binding ComboEnable}"
                                ItemsSource="{Binding UploadStatus}"
                                SelectedIndex="0" />
                            <TextBlock
                                Margin="20,0,0,0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Text="選擇Host：" />
                            <ComboBox
                                x:Name="combo2"
                                materialDesign:HintAssist.Hint="選擇Host"
                                IsEnabled="{Binding ComboEnable}"
                                ItemsSource="{Binding Hosts}"
                                SelectedIndex="0" />
                            <TextBlock
                                Margin="20,0,0,0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Text="產品名稱：" />
                            <TextBox
                                x:Name="search"
                                Width="100"
                                materialDesign:TextFieldAssist.HasClearButton="True"
                                IsEnabled="{Binding ComboEnable}"
                                Text="{Binding SearchKeyword, UpdateSourceTrigger=PropertyChanged}" />
                            <TextBlock
                                Margin="20,0,0,0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Text="{Binding Info}" />
                        </ToolBar>
                    </ToolBarTray>

                    <FrameworkElement x:Name="DataContextProxy" DataContext="{Binding}" />
                    <DataGrid
                        x:Name="datagrid1"
                        Grid.Row="1"
                        Margin="2,0,0,0"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        AutoGenerateColumns="False"
                        CanUserAddRows="False"
                        CanUserDeleteRows="False"
                        CanUserSortColumns="False"
                        Focusable="False"
                        ItemsSource="{Binding products}"
                        RowHeight="80">
                        <DataGrid.Columns>

                            <DataGridCheckBoxColumn
                                Binding="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}"
                                EditingElementStyle="{StaticResource MaterialDesignDataGridCheckBoxColumnEditingStyle}"
                                ElementStyle="{StaticResource MaterialDesignDataGridCheckBoxColumnStyle}">
                                <DataGridCheckBoxColumn.Header>
                                    <Border Background="Transparent">
                                        <CheckBox IsChecked="{Binding DataContext.SelectAll, Source={x:Reference DataContextProxy}}" Style="{StaticResource MaterialDesignCheckBox}" />
                                    </Border>
                                </DataGridCheckBoxColumn.Header>
                                <DataGridCheckBoxColumn.HeaderStyle>
                                    <Style BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}" TargetType="{x:Type DataGridColumnHeader}">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGridCheckBoxColumn.HeaderStyle>
                            </DataGridCheckBoxColumn>

                            <DataGridTemplateColumn
                                Width="*"
                                CanUserSort="False"
                                Header="產品名稱">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock
                                            VerticalAlignment="Center"
                                            Text="{Binding Name}"
                                            TextWrapping="Wrap" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn
                                Width="*"
                                CanUserSort="False"
                                Header="數據Url">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock
                                            VerticalAlignment="Center"
                                            Text="{Binding Link}"
                                            TextWrapping="Wrap" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn
                                Width="100"
                                CanUserSort="False"
                                Header="">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button
                                            x:Name="copyBtn"
                                            Click="copyBtn_Click"
                                            Content="{materialDesignMahApps:PackIcon Kind=ContentCopy}"
                                            Style="{StaticResource MaterialDesignIconButton}"
                                            ToolTip="複製數據Url" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn
                                Width="150"
                                CanUserSort="False"
                                Header="狀態">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock VerticalAlignment="Center" Text="{Binding Description}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn
                                Width="*"
                                CanUserSort="False"
                                Header="說明">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock
                                            VerticalAlignment="Center"
                                            Text="{Binding Reason}"
                                            TextWrapping="Wrap" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                        </DataGrid.Columns>
                    </DataGrid>

                </Grid>
            </TabItem>
            <TabItem Header="已採集shopify站點">
                <Grid>
                    <DataGrid
                        x:Name="datagrid2"
                        Margin="2,0,0,0"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        AutoGenerateColumns="False"
                        CanUserAddRows="False"
                        CanUserDeleteRows="False"
                        CanUserSortColumns="False"
                        Focusable="False"
                        ItemsSource="{Binding Websites}"
                        RowHeight="80">
                        <DataGrid.Columns>
                            <DataGridTemplateColumn
                                Width="*"
                                CanUserSort="False"
                                Header="Host">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock
                                            VerticalAlignment="Center"
                                            Text="{Binding Name}"
                                            TextWrapping="Wrap" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn
                                Width="*"
                                CanUserSort="False"
                                Header="站點Url">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock
                                            VerticalAlignment="Center"
                                            Text="{Binding Link}"
                                            TextWrapping="Wrap" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn
                                Width="100"
                                CanUserSort="False"
                                Header="">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button
                                            x:Name="copyBtn"
                                            Click="copyBtn_Click"
                                            Content="{materialDesignMahApps:PackIcon Kind=ContentCopy}"
                                            Style="{StaticResource MaterialDesignIconButton}"
                                            ToolTip="複製數據Url" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn
                                Width="*"
                                CanUserSort="False"
                                Header="Cookies">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock
                                            VerticalAlignment="Center"
                                            Text="{Binding Cookie}"
                                            TextWrapping="Wrap" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn
                                Width="100"
                                CanUserSort="False"
                                Header="">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button
                                            x:Name="button1"
                                            Click="button1_Click"
                                            Content="{materialDesignMahApps:PackIcon Kind=Refresh}"
                                            Style="{StaticResource MaterialDesignIconButton}"
                                            ToolTip="刷新cookie" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

        </mah:MetroAnimatedSingleRowTabControl>
        <materialDesign:Snackbar
            x:Name="snackbar1"
            Margin="0,0,0,10"
            MessageQueue="{materialDesign:MessageQueue}" />
    </Grid>
</UserControl>
