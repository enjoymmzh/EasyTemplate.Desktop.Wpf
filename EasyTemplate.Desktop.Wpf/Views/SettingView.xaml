<UserControl
    x:Class="EasyTemplate.Desktop.Wpf.Views.SettingView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:materialDesignMahApps="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="setting"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>
        <materialDesign:Snackbar
            x:Name="snackbar1"
            Margin="20"
            MessageQueue="{materialDesign:MessageQueue}" />
        <DockPanel Margin="50,50,50,70" LastChildFill="True">
            <TextBlock Style="{StaticResource MaterialDesignHeadline3TextBlock}" Text="設置" />
            <ScrollViewer Margin="50,60,0,0">
                <StackPanel>
                    <TextBlock
                        Margin="0,20,0,0"
                        Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                        Text="基本" />
                    <StackPanel
                        Margin="20,20,0,0"
                        HorizontalAlignment="Left"
                        Orientation="Horizontal">
                        <TextBlock
                            Width="200"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                            Text="總後台域名："
                            TextAlignment="Left" />
                        <TextBox
                            Width="500"
                            VerticalAlignment="Top"
                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                            Text="{Binding GeneralUrl}" />
                    </StackPanel>
                    <StackPanel
                        Margin="20,20,0,0"
                        HorizontalAlignment="Left"
                        Orientation="Horizontal">
                        <TextBlock
                            Width="200"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                            Text="開機時啟動："
                            TextAlignment="Left" />
                        <TextBlock
                            Width="50"
                            VerticalAlignment="Center"
                            Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                            Text="否" />
                        <ToggleButton
                            Margin="20,0,0,0"
                            IsChecked="{Binding IsAutoRun}"
                            Style="{StaticResource MaterialDesignSwitchLightToggleButton}" />
                        <TextBlock
                            Width="50"
                            Margin="20,0,0,0"
                            VerticalAlignment="Center"
                            Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                            Text="是" />
                    </StackPanel>
                    <StackPanel
                        Margin="20,20,0,0"
                        HorizontalAlignment="Left"
                        Orientation="Horizontal">
                        <TextBlock
                            Width="200"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                            Text="最小化到托盤："
                            TextAlignment="Left" />
                        <TextBlock
                            Width="50"
                            VerticalAlignment="Center"
                            Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                            Text="否" />
                        <ToggleButton
                            Margin="20,0,0,0"
                            IsChecked="{Binding IsDirectClose}"
                            Style="{StaticResource MaterialDesignSwitchLightToggleButton}" />
                        <TextBlock
                            Width="50"
                            Margin="20,0,0,0"
                            VerticalAlignment="Center"
                            Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                            Text="是" />
                    </StackPanel>
                    <StackPanel
                        Margin="20,20,0,0"
                        HorizontalAlignment="Left"
                        Orientation="Horizontal">
                        <TextBlock
                            Width="200"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                            Text="重置產品數據："
                            TextAlignment="Left" />
                        <Button
                            Width="100"
                            Command="{Binding ClearCommand}"
                            Content="清理" />
                    </StackPanel>

                    <TextBlock
                        Margin="0,40,0,0"
                        Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                        Text="樣式" />
                    <StackPanel
                        Margin="20,20,0,0"
                        HorizontalAlignment="Left"
                        Orientation="Horizontal">
                        <TextBlock
                            Width="200"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                            Text="主題："
                            TextAlignment="Left" />
                        <TextBlock
                            Width="50"
                            VerticalAlignment="Center"
                            Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                            Text="Light" />
                        <ToggleButton
                            Margin="20,0,0,0"
                            IsChecked="{Binding IsDarkTheme}"
                            Style="{StaticResource MaterialDesignSwitchLightToggleButton}" />
                        <TextBlock
                            Width="50"
                            Margin="20,0,0,0"
                            VerticalAlignment="Center"
                            Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                            Text="Dark" />
                    </StackPanel>
                    <StackPanel
                        Margin="20,20,0,0"
                        HorizontalAlignment="Left"
                        Orientation="Horizontal">
                        <TextBlock
                            Width="200"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                            Text="啟動時窗體最大化："
                            TextAlignment="Left" />
                        <TextBlock
                            Width="50"
                            VerticalAlignment="Center"
                            Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                            Text="否" />
                        <ToggleButton
                            Margin="20,0,0,0"
                            IsChecked="{Binding IsMaxWindow}"
                            Style="{StaticResource MaterialDesignSwitchLightToggleButton}" />
                        <TextBlock
                            Width="50"
                            Margin="20,0,0,0"
                            VerticalAlignment="Center"
                            Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                            Text="是" />
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </DockPanel>
    </Grid>
</UserControl>
